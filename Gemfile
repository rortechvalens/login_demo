source 'https://rubygems.org'

# Version of rails used.
gem 'rails', '3.2.12'

# Sqlite Support
gem 'pg'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end


gem 'jquery-rails'

# bccrypt used to encrypt/decrypt the password in hash.
gem 'bcrypt-ruby', :require => 'bcrypt'

# To overcome assets problem on webrick server
gem 'thin'